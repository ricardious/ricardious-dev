---
import Headline from "@atoms/Headline.astro";

interface Props {
  email?: string;
  socials?: Array<{ name: string; url: string }>;
}

const {
  email = "castaneda.systems@gmail.com",
  socials = [
    { name: "twitter", url: "https://twitter.com" },
    { name: "instagram", url: "https://instagram.com" },
    { name: "discord", url: "https://discord.gg" },
  ],
} = Astro.props;
---

<footer class="px-page">
  <div
    class="mx-auto w-full flex flex-col items-center pb-[15vh] max-md:pb-[12vh]"
  >
    <Headline name="work together" />

    <div
      class="w-full h-[60vh] flex items-center justify-center flex-wrap flex-col"
    >
      <a
        href={`mailto:${email}`}
        class="font-serif text-[14vw] leading-[0.9] uppercase max-md:text-[18vw]"
      >
        Drop me
      </a>
      <div
        class="font-serif text-[14vw] leading-[0.9] uppercase max-md:text-[18vw]"
      >
        <span>
          an
          <br />
          <span
            class="important-word relative overflow-hidden inline-block px-2.5"
          >
            <span
              class="word relative inline-block ml-[6%] text-primary transition-transform duration-300 ease-in-out hover:-translate-y-full"
            >
              <span>email</span>
              <a
                href={`mailto:${email}`}
                class="absolute left-0 top-full text-primary"
              >
                email
              </a>
            </span>
          </span>
        </span>
      </div>
    </div>

    <div class="w-full h-px bg-text-disabled2 transition-colors duration-600">
    </div>

    <div
      class="text-[10px] mt-5 w-full flex flex-row items-center justify-between"
    >
      <div class="text-link max-md:hidden">@2026</div>
      <ul
        class="flex flex-row flex-wrap list-none gap-6 max-md:justify-between"
      >
        {
          socials.map((social) => (
            <li>
              <a
                class="text-link"
                href={social.url}
                target="_blank"
                rel="noopener noreferrer"
              >
                {social.name}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</footer>
