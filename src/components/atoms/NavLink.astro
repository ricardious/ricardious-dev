---
interface Props {
  href: string;
  class?: string;
  isActive?: boolean;
}

const { href, class: className, isActive = false } = Astro.props;
const currentPath = Astro.url.pathname;
const active = isActive || currentPath === href;
---

<a
  href={href}
  class:list={[
    "text-h6 text-white/40 transition-colors hover:text-white",
    { "text-white line-through": active },
    className,
  ]}
>
  <slot />
</a>
