---
interface Props {
  href: string;
  class?: string;
  isActive?: boolean;
}

const { href, class: className, isActive = false } = Astro.props;
const currentPath = Astro.url.pathname;
const active = isActive || currentPath === href;
---

<a
  href={href}
  class:list={[
    "text-h6 transition-colors",
    active ? "text-white line-through" : "text-white/40 hover:text-white",
    className,
  ]}
>
  <slot />
</a>
